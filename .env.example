# ============================================
# CLIENT-SIDE ENVIRONMENT VARIABLES (Public)
# ============================================
# These are exposed to the browser (VITE_ prefix)
# DO NOT put secret API keys here in production

# Supabase Configuration (Public)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key

# AI Provider Selection (gemini, openai, or groq)
VITE_AI_PROVIDER=gemini

# ================================================
# SERVER-SIDE ENVIRONMENT VARIABLES (Secret)
# ================================================
# For local Supabase Edge Function development
# Add these to your Supabase project secrets in production
# via: supabase secrets set GEMINI_API_KEY=your_key

# AI Provider API Keys (Server-side only - DO NOT use VITE_ prefix)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Default AI Provider for server
AI_PROVIDER=gemini

# ================================================
# OFFLINE PARSER CONFIGURATION
# ================================================
# Enable to use local NLP parser instead of cloud LLM for scoring/extraction
# This reduces token usage by ~60-80% (keeps LLM for rewriting only)

# Enable offline parser (set to true to use local parser)
VITE_OFFLINE_PARSER=false

# Offline parser URL (default: local Docker container)
VITE_OFFLINE_PARSER_URL=http://localhost:8000

# ================================================
# ATS ENGINE CONFIGURATION
# ================================================
# Configure default behavior for ATS scoring engine

# Prefer offline (Pyodide) evaluation over cloud API
# Set to false to use cloud API by default (better accuracy, requires API key)
# Set to true to use offline Pyodide parser by default (faster, no API calls, works offline)
VITE_PREFER_OFFLINE_ATS=true
